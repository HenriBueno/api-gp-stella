generator client {
  provider = "prisma-client"
  output        = "./generated/prisma"
  moduleFormat  = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum ProductType {
  LED_STRIP // FITAS
  POWER_SUPPLY // FONTES
  LAMPS // LAMPADAS
  LUMINAIRES // LUMINARIAS
  GARDEN // JARDIM
  S_TOUCH
  SYSTEMS // SISTEMAS
}

enum MeasurementType {
  INTEGRATING_SPHERE
  GONIOPHOTOMETER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Product {
  id         String             @id @default(uuid())
  name       String
  type       ProductType
  reference  String             @unique
  parameters ProductParameter[] // default parameters for this product
  projects   Project[] // projects using this product
  createdAt  DateTime           @default(now())
  updatedAt  DateTime           @updatedAt

  @@map("products")
}

model ProductParameter {
  id        String   @id @default(uuid())
  name      String
  value     Float
  unit      String?
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("product_parameters")
}

model Project {
  id        String   @id @default(uuid())
  number    String   @unique
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  samples   Sample[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("projects")
}

model Sample {
  id           String        @id @default(uuid())
  code         String // Ex: A, B, C...
  project      Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId    String
  measurements Measurement[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@unique([code, projectId])
  @@map("samples")
}

model Measurement {
  id              String                 @id @default(uuid())
  measurementType MeasurementType
  parameters      MeasurementParameter[]
  sample          Sample                 @relation(fields: [sampleId], references: [id], onDelete: Cascade)
  sampleId        String
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt

  @@map("measurements")
}

model MeasurementParameter {
  id            String      @id @default(uuid())
  name          String
  value         Float
  unit          String?
  measurement   Measurement @relation(fields: [measurementId], references: [id], onDelete: Cascade)
  measurementId String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@map("measurement_parameters")
}
